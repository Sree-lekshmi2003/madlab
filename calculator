            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="18sp"
            android:onClick="onDigitClick" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="?android:attr/buttonStyleSmall"
            android:layout_columnWeight="1"
            android:text="3"
